@model List<UsersListViewModel>
@{
    ViewData["Title"] = "لیست کاربران";
    int i = 1;
}

<!--Shopping cart starts-->
<section id="shopping-cart">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-warning">
                        <h4 class="card-title">محصولات</h4>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="aler alert-danger round m-2 p-2">
                            <p>
                                <strong>خطا ! </strong>@TempData["Error"]
                            </p>
                        </div>}
                    @if (TempData["Success"] != null)
                    {
                        <div class="aler alert-success round m-2 p-2">
                            <p>
                                <strong>موفقیت ! </strong>@TempData["Success"]
                            </p>
                        </div>}
                    <div class="card-block">
                        <div class="table-responsive">
                            <form method="post" asp-action="DeleteProduct" asp-controller="ProductManager">
                                <table id="recent-orders" class="table table-hover table-xl mb-0">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0"><button type="submit" class="btn btn-outline-danger"><i class="icon-trash"></i></button></th>
                                            <th class="border-top-0">نام</th>
                                            <th class="border-top-0">ایمیل</th>
                                            <th class="border-top-0">مقام</th>
                                            <th class="border-top-0">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int b = 0; b < Model.Count(); b++,i++)
                                        {
                                            <tr>
                                                <td class="text-truncate">
                                                    @i
                                                </td>
                                                <td>
                                                    @*<input type="checkbox" asp-for="@Model[b].IsSelected" />
                                                    <input asp-for="@Model[b].Id" type="hidden" />*@
                                                </td>
                                                <td class="text-truncate">
                                                    @if (Model[b].UserName.Length > 10)
                                                    {
                                                        <text> @Model[b].UserName.Remove(10) </text> }
                                                    else
                                                    {
                                                        @Model[b].UserName}
                                                </td>
                                                <td class="text-truncate p-1">
                                                        @Model[b].UserEmail
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-danger round">
                                                        @if(!string.IsNullOrEmpty(Model[b].RoleName))
                {
                    @Model[b].RoleName
                                                        }
                                                        else
                {
                    <text>مقامی ندارد</text>
                }
                                                    </button>
                                                </td>
                                                <td class="text-truncate">
                                                    <a class="btn btn-outline-primary"
                                                       asp-action="EditProduct"
                                                       asp-controller="ProductManager"
                                                       asp-route-productId="">ویرایش</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Shopping cart ends-->
