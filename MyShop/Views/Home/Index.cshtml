<!-- adplacement------------------------------->
<div class="container-main">
    <div class="col-lg-3 col-md-3 col-xs-12 pr">
        <div class="adplacement-container-row mt-4">
            <a href="@Model.Baners.SingleOrDefault(p=>p.ImageLocation=="Right").Link" class="adplacement-item">
                <div class="adplacement-sponsored_box">
                    <img src="/Images/Baners/@Model.Baners.SingleOrDefault(p=>p.ImageLocation=="Right").ImageSrc" style="max-height: 475px;">
                </div>
            </a>
        </div>
    </div>
    <!-- slider-main--------------------------->
    <div class="col-lg-9 col-md-9 col-xs-12 pl">
        <div class="slider-main-container d-block">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (var b = 0; b < Model.Baners.Where(p => p.ImageLocation == "Slider").Count(); b++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@b" class="active"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <a href="@Model.Baners.Where(p => p.ImageLocation == "Slider").FirstOrDefault().Link" class="adplacement-item">
                            <img src="/Images/Baners/@Model.Baners.Where(p => p.ImageLocation == "Slider").FirstOrDefault().ImageSrc" class="d-block w-100" alt="@Model.Baners.FirstOrDefault().Text">
                        </a>
                    </div>
                    @foreach (var item in Model.Baners.Where(p => p.ImageLocation == "Slider").Skip(1))
                    {
                        <div class="carousel-item">
                            <a href="@item.Link" class="adplacement-item">
                                <img src="/Images/Baners/@item.ImageSrc" class="d-block w-100" alt="@item.Text" style="max-height:490px">
                            </a>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="fa fa-angle-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="fa fa-angle-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <!-- moment-slider-------------------------->
    <!-- slider-amazing------------------------->
    <!-- adplacement--------------------------->


</div>
