<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - کلوزاستور</title>

    <!-- font---------------------------------------->
    <link rel="stylesheet" href="~/assets/css/vendor/font-awesome.min.css">
    <link href="~/assets/css/vendor/materialdesigniconsMin.css" rel="stylesheet" />
    <!-- plugin-------------------------------------->
    <link href="~/assets/css/vendor/bootstrapMin.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/vendor/owl.carousel.min.css">
    <link href="~/assets/css/vendor/nice-selectMin.css" rel="stylesheet" />

    @await RenderSectionAsync("Header", required: false)

    <!-- main-style---------------------------------->
    <link href="~/assets/css/mainMin.css" rel="stylesheet" />
    <link href="~/assets/css/responsiveMin.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <!-- header-------------------------------->
    <partial name="_HeaderPartial" />
    <!-- header-------------------------------->

    <div>
        @RenderBody()
    </div>

    <!-- footer------------------------------------------->
    <partial name="_FooterPartial" />
    <!-- footer------------------------------------------->
    <!-- scroll_Progress------------------------->
    <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
            <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
    </div>
    <!-- scroll_Progress------------------------->
    <!-- file js---------------------------------------------------->
    <script src="~/assets/js/vendor/jquery-3.2.1.min.js"></script>
    <script src="~/assets/js/vendor/bootstrapMin.js"></script>
    <!-- plugin----------------------------------------------------->
    <script src="~/assets/js/vendor/owl.carousel.min.js"></script>
    <script src="~/assets/js/vendor/jquery.countdownMin.js"></script>
    <script src="~/assets/js/vendor/jquery.nice-select.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- main js---------------------------------------------------->
    <script src="~/assets/js/mainMin.js"></script>

</body>
</html>