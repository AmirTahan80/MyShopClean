@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown-menu">
        <ul class="account-uls mb-0">
            <li class="account-item">
                <a asp-action="Profile" asp-controller="Account" class="account-link">پنل کاربری</a>
            </li>
            <li class="account-item">
                <a asp-action="ShowCart" asp-controller="Account" class="account-link">سبد خرید</a>
            </li>
            <li class="account-item">
                <a asp-action="ShowCart" asp-controller="Account" class="account-link">سفارشات من</a>
            </li>
            <li class="account-item">
                <a asp-action="PersonalInfo" asp-controller="Account" class="account-link">تنظیمات</a>
            </li>
            <li class="account-item">
                <form asp-action="SignOutWeb" asp-controller="Account" method="post">
                    <button class="account-link">خروج</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="dropdown-menu">
        <ul class="account-uls mb-0">
            <li class="account-item">
                <a asp-action="Register" asp-controller="Account" class="account-link">ثبت نام</a>
            </li>
            <li class="account-item">
                <a asp-action="Login" asp-controller="Account" class="account-link">ورود</a>
            </li>
        </ul>
    </div>
}