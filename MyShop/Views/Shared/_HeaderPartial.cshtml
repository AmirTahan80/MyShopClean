<!-- header-------------------------------->
<header class="header-main">
    <div class="text-right">
        <nav class="top-bar-menu">
            <div class="container-main">
                <div class="col-12">
                    <div class="top-bar-right">
                        <ul class="top-menu-ul d-block">
                            <li class="top-menu-item menu-item-type">
                                <a asp-action="Index" asp-controller="Product" class="top-menu-link">محصولات</a>
                            </li>
                            <li class="top-menu-item menu-item-type">
                                <a asp-action="ContactUs" asp-controller="Account" class="top-menu-link">تماس با ما</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="top-menu-item menu-item-type">
                                    <a asp-action="Profile" asp-controller="Account" class="top-menu-link">حساب من</a>
                                </li>
                            }
                            <li class="top-menu-item menu-item-type">
                                <a asp-action="AboutUs" asp-controller="Home" class="top-menu-link">درباره ما</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-main">
        <section class="h-main-row">
            <div class="col-lg-9 col-md-9 col-xs-12 pr">
                <div class="header-right">
                    <div class="col-lg-3 pr">
                        <div class="header-logo row text-right" style="justify-content:center">
                            <a href="#">
                                <img src="/assets/images/logo.png" alt="CloseStore" style=" max-width: 9rem;">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-9 pl">
                        <div class="header-search row text-right">
                            <div class="header-search-box">
                                <form asp-action="Index" asp-controller="Product" method="get" enctype="text/plain" class="form-search">
                                    <input type="search" class="header-search-input" name="searchProduct" placeholder="نام کالا را جستجو کنید…" value="@ViewBag.SearchProduct">
                                    @if (ViewData["Filter"] != null)
                                    {
                                        <input value="@ViewBag.FilterName" type="hidden" name="filter" />
                                        <input value="@ViewBag.SearchProduct" type="hidden" name="searchProduct" />
                                        @if(ViewBag.CategoriesId != null)
                                        {
                                            foreach (var item in ViewBag.CategoriesId)
                                            {
                                                <input value="@item" type="hidden" name="categoriesId"/>
                                            }
                                        }
                                    }
                                    <div class="action-btns">
                                        <button class="btn btn-search" type="submit">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-xs-12 pl">
                <div class="header-left">
                    <div class="header-account text-left">
                        <div class="d-block">
                            <div class="account-box account-box-home-2">
                                <div class="nav-account d-block pl">
                                    <span class="icon-account">
                                        <img src="/assets/images/man.png" class="avator">
                                    </span>
                                    <partial name="_AccountPartial"></partial>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div>
            <nav class="header-main-nav">
                <div class="d-block">
                    <div class="align-items-center">
                        <ul class="menu-ul mega-menu-level-one">
                            @await Component.InvokeAsync("CategoryComponent")
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <!--    responsive-megamenu-mobile----------------->
        <nav class="sidebar">
            <div class="nav-header">
                <!--              <img class="pic-header" src="images/header-pic.jpg" alt="">-->
                <div class="header-cover"></div>
                <div class="logo-wrap">
                    <a class="logo-icon" href="#"><img alt="logo-icon" src="/assets/images/logo.png" width="40"></a>
                </div>
            </div>
            @await Component.InvokeAsync("ResponsiveCategoryComponent");
        </nav>
        <div class="nav-btn nav-slider nav-btn-home-3">
            <span class="linee1"></span>
            <span class="linee2"></span>
            <span class="linee3"></span>
        </div>
        <div class="overlay"></div>
        <!--    responsive-megamenu-mobile----------------->
    </div>
</header>
<div class="nav-categories-overlay"></div>
